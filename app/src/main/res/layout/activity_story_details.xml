<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#e1eef5"
    tools:context="com.example.user.biographics_tests"
    android:orientation="vertical">

    <EditText
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:background="#fffef8"
        android:textColor="#ba3e1c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/EditTitle"
        android:layout_column="9"
        android:hint="כותרת"
        />

    <TextView
        android:background="#fffef8"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="locale"
        android:textColor="#ba3e1c"
        android:text="מתי כל זה קרה"
        android:textSize="25dp"/><!-- -->


    <TableLayout
        android:background="#fffef8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layoutDirection="rtl">


        <TableRow
            android:layout_marginTop="5dp"
            >

        </TableRow>
        <TableRow
            >

            <Spinner
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:id="@+id/daySpinner"
                android:layout_column="0"
                android:layoutMode="opticalBounds"
                android:spinnerMode="dialog" />

            <Spinner
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:id="@+id/monthSpinner"
                android:layout_column="1"
                android:spinnerMode="dialog" />

            <Spinner
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:id="@+id/yearSpinner"
                android:layout_column="2"
                android:transitionGroup="false"
                android:spinnerMode="dialog" />
        </TableRow>

    </TableLayout>

    <EditText
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:background="#fffef8"
        android:textColor="#ba3e1c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/EditLocation"
        android:layout_column="9"
        android:hint="איפה הכל התרחש"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:background="#fcf9c3"
        android:textColor="#122f40"
        android:src="@drawable/squaryplusbutton"
        android:scaleType="fitCenter"/>

    <EditText
        android:layout_marginTop="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:background="#fffef8"
        android:textColor="#ba3e1c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/editTextPeople"
        android:layout_column="9"
        android:hint="מי עוד היה שם"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:background="#fcf9c3"
        android:textColor="#122f40"
        android:src="@drawable/squaryplusbutton"
        android:scaleType="fitCenter"/>


    <ImageButton
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#e1eef5"
        android:textColor="#122f40"
        android:onClick="submit"
        android:id="@+id/SubmitButton"
        android:src="@drawable/donebutton"
        android:scaleType="fitCenter"/>


</LinearLayout>